{
  "name": "staking-contracts",
  "version": "0.0.1",
  "private": true,
  "main": "index.js",
  "repository": "https://github.com/0xPolygon/staking-contracts.git",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "deploy": "hardhat run scripts/staking/deploy.ts --network polygonedge",
    "upgrade": "hardhat run scripts/staking/upgrade.ts --network polygonedge",
    "deploy-rewards": "hardhat run scripts/block-rewards/deploy.ts --network polygonedge",
    "stake": "hardhat run scripts/staking/stake.ts --network polygonedge",
    "transfer": "hardhat run scripts/staking/transfer.ts --network polygonedge",
    "unstake": "hardhat run scripts/staking/unstake.ts --network polygonedge",
    "info": "hardhat run scripts/staking/info.ts --network polygonedge",
    "setblockrewards": "hardhat run scripts/staking/setblockrewards.ts --network polygonedge",
    "setvalidators": "hardhat run scripts/staking/setvalidators.ts --network polygonedge",
    "reportoutcome": "hardhat run scripts/staking/reportoutcome.ts --network polygonedge",
    "test": "npx hardhat test",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "lint": "solhint 'contracts/**/*.sol'"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.18.1",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.5",
    "hardhat": "^2.6.1",
    "web3": "^1.5.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.1",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "hardhat-deploy": "^0.11.10",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.4",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  }
}
